{
  "name": "Custom Dev Container",
  "context": "..",
  "dockerFile": "./Dockerfile",
  "runArgs": ["--init"],
  "remoteUser": "ubuntu",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
      },
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
      ]
    }
  }
}
